<!-- Login client form section -->

<div class="container mt-5" style="margin-bottom: 200px;">
  <h2 class="text-center mb-4">Client Login</h2>
  <form action="/client/login" , method="POST">
    <div class="mb-3">
      <label for="clientEmail" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        id="clientEmail"
        name="email"
        required
      />
    </div>
    <div class="mb-3">
      <label for="clientPassword" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="clientPassword"
        name="password"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
  </form>
  <p class="mt-3">
    Don't have an account? <a href="/client/signup">Sign up here</a>.
  </p>
</div>

