<!-- travel assistant login -->
<div class="container mt-5" style="margin-bottom: 200px;">
  <h2 class="text-center mb-4">Travel Assistant Login</h2>
  <form action="/assistant/login" , method="POST">
    <div class="mb-3">
      <label for="assistantEmail" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        id="assistantEmail"
        name="email"
        required
      />
    </div>
    <div class="mb-3">
      <label for="assistantPassword" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="assistantPassword"
        name="password"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
  </form>
  <p class="mt-3">
    Don't have an account? <a href="/assistant/signup">Sign up here</a>.
  </p>
</div>

